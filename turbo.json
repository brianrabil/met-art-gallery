{
	"$schema": "https://turborepo.com/schema.json",
	"globalEnv": [
		"BETTER_AUTH_SECRET",
		"BETTER_AUTH_URL",
		"ENCRYPTION_KEY",
		"TURSO_AUTH_TOKEN",
		"TURSO_DATABASE_URL",
		"TURSO_SYNC_URL",
		"GITHUB_CLIENT_ID",
		"GITHUB_CLIENT_SECRET"
	],
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": [".next/**", "!.next/cache/**"]
		},
		"dev": {
			"persistent": true,
			"cache": false,
			"with": ["db:dev"]
		},
		"db:dev": {
			"persistent": true,
			"cache": false
		},
		"db:push": {
			"cache": false
		},
		"db:migrate": {
			"cache": false
		},
		"lint": {
			"dependsOn": ["//#biome:check"]
		},
		"lint:fix": {
			"dependsOn": ["//#biome:check:fix"],
			"cache": false
		},
		"//#biome:check": {},
		"//#biome:check:fix": {
			"cache": false
		}
	}
}
